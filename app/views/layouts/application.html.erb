<!DOCTYPE html>
<html>
<head>
  <title>Poem Generator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


  <header>
       <h3>generating deep poems daily</h3>
  </header>

<body>




  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Poem Generator</h4>
        </div>
        <div class="modal-body">
          <%= simple_form_for Poem.new do |f| %>
            <%= f.input :noun %>
            <%= f.input :adverb %>
            <%= f.input :pluralnoun %>
            <%= f.input :verb %>
            <%= f.input :adjective %>
            <%= f.input :plant %>
            <br />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit 'Create' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>



<div class="container">
    <% if flash[:error].present? %>
      <div class="col-xs-10 col-xs-offset-1 alert alert-danger">
        <%= flash[:error].html_safe %>
      </div>
    <% end %>
    <%= yield %>
  </div>

<div class="footer">
    <div class="container">
        <div class='col-xs-12 col-xs-offset-5'>
         <%= link_to 'generate your poem', '#', data: {toggle: 'modal', target: '#myModal'}, class:'btn btn-default' %>
        </div>
    </div>
</div>

</body>
</html>
